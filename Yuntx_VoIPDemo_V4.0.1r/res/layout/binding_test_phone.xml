<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:form="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.speedtong.example.voip.view.CCPFormInputView
        android:id="@+id/et_phonenum"
        style="@style/CCPFormInputView"
        form:form_hint="@string/binding_phone_hint"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        form:form_layout="@layout/ccp_form_input_clear_et_view" />

    <Button
        android:id="@+id/bu_binding_submit"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dip"
        android:background="@drawable/login_button_selector"
        android:text="@string/bind_submit"
        android:gravity="center"
        android:textColor="@android:color/black" />

</LinearLayout>